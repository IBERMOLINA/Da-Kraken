# Da-Kraken Environment Configuration Template
# Copy this to .env and replace placeholder values with actual credentials
# NEVER commit actual API keys to version control

# AI Service API Keys (Replace with actual keys)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Security Configuration
USE_MOCK_AI=true
JSON_SAFE_ENCODING=true
API_RATE_LIMIT_ENABLED=true
API_TIMEOUT=30000
MAX_REQUEST_SIZE=1048576
ENCRYPTION_KEY=generate_random_key_here
JWT_SECRET=generate_jwt_secret_here

# Container Configuration
CONTAINER_MEMORY_LIMIT=2g
CONTAINER_CPU_LIMIT=1.0
BRIDGE_PORT=4000
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=generate_redis_password_here

# Database Configuration (if needed)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=da_kraken
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# Development Configuration
NODE_ENV=development
LOG_LEVEL=info
DEBUG_MODE=true

# Security Headers
CORS_ORIGIN=http://localhost:3000
CSP_ENABLED=true
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# Session Configuration
SESSION_SECRET=generate_session_secret_here
SESSION_TIMEOUT=3600000

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,txt,md,json,xml

# Handshake Communication Configuration  
HANDSHAKE_TIMEOUT=30000
HANDSHAKE_CLEANUP_INTERVAL=60000
HANDSHAKE_MAX_CONCURRENT=1000