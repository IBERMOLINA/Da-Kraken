{
  "name": "Da-Kraken Development Environment",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:1-20-bookworm",
  
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/git:1": {}
  },
  
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      },
      "extensions": [
        "ms-vscode.vscode-json",
        "bradlc.vscode-tailwindcss",
        "esbenp.prettier-vscode",
        "ms-vscode.vscode-typescript-next",
        "formulahendry.auto-rename-tag",
        "christian-kohler.path-intellisense",
        "ms-vscode.live-server",
        "GitHub.copilot",
        "GitHub.copilot-chat"
      ]
    }
  },
  
  "postCreateCommand": ".devcontainer/setup.sh",
  
  "forwardPorts": [3000, 3001, 8000],
  
  "portsAttributes": {
    "3000": {
      "label": "Xomni Frontend",
      "onAutoForward": "notify"
    },
    "3001": {
      "label": "Xomni Backend",
      "onAutoForward": "notify"
    },
    "8000": {
      "label": "Local Server",
      "onAutoForward": "notify"
    }
  },
  
  "remoteUser": "node",
  
  "mounts": [
    "source=node_modules,target=${containerWorkspaceFolder}/xomni/node_modules,type=volume"
  ],
  
  "onCreateCommand": "echo 'ðŸš€ Setting up Da-Kraken development environment...'",
  "updateContentCommand": ".devcontainer/setup.sh",
  
  "remoteEnv": {
    "NODE_ENV": "development"
  }
}